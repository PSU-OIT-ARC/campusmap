{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "ES5",
        "rootDir": "./src",
        "outDir": "./build/js",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["ES2016", "DOM"],
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true
    },
    "exclude": [
        "node_modules"
    ]
}
